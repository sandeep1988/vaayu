#!/usr/bin/env ruby

require 'rubygems'
require 'ruby-jmeter'

def usage(why = nil)
  puts "failed for reason: #{why}" if why
  puts "usage: flood [testplan.rb] "
  puts "  The tesplan is optional, if you leave it off you'll get an interactive shell."
  exit(1)
end

@testplan = ARGV.shift

require 'irb'
require 'irb/completion'

if File.exists? ".irbrc"
  ENV['IRBRC'] = ".irbrc"
end

ARGV.clear

IRB.start
exit!