.card.text-center
  .card-body.card-sm
    .card-title Employee Check In
    .card-text
      .easyPieChart[data-barcolor="#{trend ? '#13A89E' : '#DA4F49'}" data-trackcolor='white' data-scalecolor='white' data-lineWidth="5" data-percent="#{value.round}" data-size="90" data-lineCap="square"]
        span.count.xsmall
      .count.small
        div[class="glyphicon #{trend ? 'glyphicon-triangle-top' : 'glyphicon-triangle-bottom'} #{trend ? 'text-success' : 'text-danger'}"]
