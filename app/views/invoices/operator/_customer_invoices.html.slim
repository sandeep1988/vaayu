#customer-invoices.tab-pane.fade
  .col-md-12
    .row
      .col-md-6
        ul.date-filter
          li.filter-block.date-filter
            input#customer-invoices-picker[class="form-control" type="text" name="customer-invoices-date" value=""]
      .col-md-6
        a.btn.btn-sm.billing-delete-button.btn-fixed-width.pull-right#delete_customer_invoices[type="button" disabled="true" style="margin-left:10px"]
          | Delete
        a.btn.btn-sm.report-download-button.btn-fixed-width.pull-right#download_customer_invoices[href="/invoices/download" type="button" disabled="true"]
          | Download
  .col-md-12.table-responsive.table-responsive-datatables
    table#customer-invoices-table.table.table-hover[style="width: 100%;"]
      thead
        tr
          th.checkbox-select.ch-all-customer-invoices[style="padding:18px"]
          th
            | Invoice #
          th
            | Bill Data
          th
            | Trip Data
          th
            | Customer
          th
            | Site
          th
            | Operator
          th
            | Business Associate
          th
            | CGST
          th
            | SGST
          th
            | Total
          th
            | Status          
      tbody


  #modal-billing-detail.modal.fade[tabindex="-1" role="dialog" aria-hidden="true"]
    .modal-dialog.modal-xlg
      .modal-content
        .modal-header
          button.close[type="button" data-dismiss="modal" aria-hidden="true"]
            | x
          h4.modal-title
            | Detail
        .modal-body
          .row
            .col-md-12.table-responsive
              table#detail-info-trips-table.table
                thead
                  tr.reports-table
                    th
                      | Trip Id #
                    th
                      | Customer
                    th
                      | Vehicle
                    th
                      | Guard
                    th
                      | Toll
                    th
                      | Penalty
                    th
                      | Total Employees
                    th
                      | Served Employees
                    th
                      | Total
                tbody
                  
          .row
            .col-md-12
              .total-amount.text-right
                p
                  | Total
                  strong
                    span
                      i.fa.fa-inr
                      span#trip_total
        .modal-footer
          button.btn.btn-sm.btn-default[type="button" data-dismiss="modal"]
            | Close

