  #modal-billing-status.modal.fade[tabindex="-1" role="dialog" aria-hidden="true"]
    .modal-dialog.modal-sm[style="width:25%"]
      .modal-content
        .modal-header
          button.close[type="button" data-dismiss="modal" aria-hidden="true"]
            | Ã—
          h4.modal-title
            Change Invoice Status
        .modal-body
          .row
            .col-md-4.col-md-offset-1.margin-top
              .row[style="margin-left:5px"]
                input [type="radio" name="status" id="created_status" value="created"]
                  |    New
              .row[style="margin-left:5px"]
                input [type="radio" name="status" id="approved_status" value="approved"]
                  |    Approved
              .row[style="margin-left:5px"]
                input [type="radio" name="status" id="dirty_status" value="dirty"]
                  |    Dirty
              .row[style="margin-left:5px"]
                input [type="radio" name="status" id="paid_status" value="paid"]
                  |    Paid
        .modal-footer
          a.btn.btn-sm.btn-default#cancel_status[href="#" data-dismiss="modal"]
            | Cancel
          a.btn.btn-sm.btn-primary#save_status[href="#"]
            | Save